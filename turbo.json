{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".svelte-kit/**", ".vercel/**", ".lib/**"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["build"],
      "env": [
        "GOOGLE_CLOUD_API_KEY", 
        "ANTHROPIC_API_KEY", 
        "OPENAI_API_KEY", 
        "OPENAI_ORGANIZATION",
        "AZURE_API_KEY",
        "AZURE_REGION",
        "AZURE_ENDPOINT"
      ],
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
